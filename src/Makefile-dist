# This is just a simple make file to build the demo and tools.

# No default.
all::
	@echo "valid make targets are:"
	@echo "   ews-server-test (or demo)"
	@echo "   ews-htdocs.adb"
	@echo "   ews-make_htdocs"

demo: ews-server-test

ews-server-test: ews-htdocs.adb .build force
	gnatmake -PEWS ews-server-test
clean::
	rm -f ews-server-test

ews-htdocs.adb: ews-make_htdocs force
	(cd html && ../ews-make_htdocs >../$@)

ews-make_htdocs: ews-make_htdocs.adb .build force
	gnatmake -PEWS ews-make_htdocs
clean::
	rm -f ews-make_htdocs

.build:
	mkdir .build
clean::
	rm -rf .build

.PHONY: all clean demo force

#;; for emacs:
#;; Local Variables:
#;; mode: makefile
#;; End:
